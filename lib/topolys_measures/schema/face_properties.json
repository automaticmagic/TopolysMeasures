{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://json-schema.org/automaticmagic/topolys.json#",
  "title": "Topolys Measures Face Properties Schema",
  "description": "Schema for the Face Properties for Topolys Measures",
  
  "type": "object",
  "properties": {
    "surface_name": { "type": "string" },
    "surface_type": { "type": "string", "enum": ["Floor", "Wall", "RoofCeiling"] },
    "boundary_type": { "type": "string", "enum": ["Surface", "Outdoors", "Ground"] },
    "required": ["surface_name", "surface_type", "boundary_type"]
  }
}
